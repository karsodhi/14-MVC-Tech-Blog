<div class="text-center row col-4">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#if comments.length}}
  <div class="col-md-6 ">
    <h3>comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2 blog-list">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{comment.id}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>



{{#if logged_in}}
<form class="new-comment-form center">
  <div>
    <div class=" form-group ">
      <label for="comment-desc">description:</label>
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="button">Add comment</button>
    </div>
  </div>
</form>
{{/if}}